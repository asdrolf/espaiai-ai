---
interface Props {
  name: string;
  description: string;
  serviceType: string;
  provider?: string;
  areaServed?: string[];
  offers?: {
    price: string;
    priceCurrency: string;
    description: string;
  };
}

const { 
  name, 
  description, 
  serviceType,
  provider = 'Espai.ai',
  areaServed = ['ES', 'US', 'DE', 'FR'],
  offers
} = Astro.props;
---

<script type="application/ld+json" set:html={`{
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "${name}",
  "description": "${description}",
  "serviceType": "${serviceType}",
  "provider": {
    "@type": "Organization",
    "name": "${provider}",
    "url": "https://espai.ai"
  },
  "areaServed": ${JSON.stringify(areaServed)},
  "category": "Business Process Automation",
  "audience": {
    "@type": "BusinessAudience",
    "audienceType": "Business"
  }${offers ? `,
  "offers": {
    "@type": "Offer",
    "price": "${offers.price}",
    "priceCurrency": "${offers.priceCurrency}",
    "description": "${offers.description}",
    "availability": "https://schema.org/InStock",
    "url": "https://espai.ai/#pricing"
  }` : ''},
  "brand": {
    "@type": "Brand",
    "name": "Espai.ai"
  }
}`}>
</script> 