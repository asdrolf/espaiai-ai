---
interface Props {
  name?: string;
  description?: string;
  applicationCategory?: string;
  features?: string[];
  technologies?: string[];
  industries?: string[];
  lang?: string;
}

const { 
  name = 'Espai.ai AI Process Automation',
  description = 'Advanced AI technology for business process automation, recording, analysis and optimization',
  applicationCategory = 'AI Business Software',
  features = [
    'Automated Process Recording',
    'AI-Powered Workflow Analysis', 
    'Intelligent Process Optimization',
    'Machine Learning Process Mining',
    'Real-time Business Intelligence',
    'Custom Automation Generation',
    'Multi-language Process Support',
    'Predictive Process Analytics'
  ],
  technologies = [
    'Artificial Intelligence',
    'Machine Learning',
    'Process Mining',
    'Computer Vision',
    'Natural Language Processing',
    'Robotic Process Automation',
    'Business Intelligence',
    'Data Analytics'
  ],
  industries = [
    'Financial Services',
    'Healthcare',
    'Manufacturing', 
    'Retail',
    'Technology',
    'Education',
    'Government',
    'Consulting'
  ],
  lang = 'en'
} = Astro.props;
---

<script type="application/ld+json" set:html={`{
  "@context": "https://schema.org",
  "@type": ["SoftwareApplication", "Product"],
  "name": "${name}",
  "description": "${description}",
  "applicationCategory": "${applicationCategory}",
  "applicationSubCategory": "Process Automation Software",
  "operatingSystem": ["Windows 10+", "macOS 10.15+", "Linux"],
  "softwareRequirements": "Modern web browser, Internet connection",
  "memoryRequirements": "4GB RAM minimum, 8GB recommended",
  "storageRequirements": "100MB local storage",
  "processorRequirements": "Intel i5 or equivalent",
  "releaseNotes": "AI-powered business process automation with intelligent workflow analysis",
  "downloadUrl": "https://espai.ai/contact",
  "installUrl": "https://espai.ai/contact",
  "softwareHelp": "https://espai.ai/faq",
  "applicationSuite": "Espai.ai Business Automation Suite",
  "featureList": ${JSON.stringify(features)},
  "keywords": ${JSON.stringify(technologies.concat(['business automation', 'workflow optimization', 'process efficiency', 'AI SaaS']))},
  "inLanguage": "${lang}",
  "isAccessibleForFree": false,
  "hasPart": [
    {
      "@type": "SoftwareApplication",
      "name": "Process Recorder",
      "description": "AI-powered system event recording and analysis"
    },
    {
      "@type": "SoftwareApplication", 
      "name": "Workflow Analyzer",
      "description": "Machine learning workflow pattern recognition and optimization"
    },
    {
      "@type": "SoftwareApplication",
      "name": "Automation Builder",
      "description": "Intelligent automation creation and deployment"
    }
  ],
  "targetProduct": {
    "@type": "Product",
    "name": "Business Process Optimization",
    "category": "Software as a Service",
    "audience": {
      "@type": "BusinessAudience",
      "audienceType": "Enterprise and SMB businesses"
    }
  },
  "usageInfo": {
    "@type": "CreativeWork",
    "name": "How AI Process Automation Works",
    "description": "Espai.ai records all system interactions, uses AI to analyze patterns and bottlenecks, then automatically creates optimized workflows and automations"
  },
  "serviceType": "AI Technology Platform",
  "providerMobility": "International",
  "areaServed": ${JSON.stringify(industries)},
  "brand": {
    "@type": "Brand",
    "name": "Espai.ai",
    "logo": "https://espai.ai/logoespaiai.webp"
  },
  "manufacturer": {
    "@type": "Organization",
    "name": "Espai.ai",
    "url": "https://espai.ai"
  },
  "offers": {
    "@type": "AggregateOffer",
    "priceCurrency": "EUR",
    "lowPrice": 70,
    "highPrice": 100,
    "offerCount": 2,
    "priceSpecification": {
      "@type": "UnitPriceSpecification",
      "unitText": "per device per month",
      "unitCode": "MON"
    }
  }
}`}>
</script> 