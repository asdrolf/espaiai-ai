---
interface Props {
  name: string;
  description: string;
  embedUrl: string;
  thumbnailUrl?: string;
  uploadDate?: string;
  duration?: string;
}

const { 
  name, 
  description, 
  embedUrl, 
  thumbnailUrl = 'https://espai.ai/logoespaiai.webp',
  uploadDate = '2024-01-01',
  duration = 'PT2M30S' // ISO 8601 duration format
} = Astro.props;
---

<script type="application/ld+json" set:html={`{
  "@context": "https://schema.org",
  "@type": "VideoObject",
  "name": "${name}",
  "description": "${description}",
  "embedUrl": "${embedUrl}",
  "thumbnailUrl": "${thumbnailUrl}",
  "uploadDate": "${uploadDate}",
  "duration": "${duration}",
  "publisher": {
    "@type": "Organization",
    "name": "Espai.ai",
    "logo": {
      "@type": "ImageObject",
      "url": "https://espai.ai/logoespaiai.webp"
    }
  },
  "contentUrl": "${embedUrl}",
  "isFamilyFriendly": true,
  "inLanguage": "en"
}`}>
</script> 