---
import { getLangFromUrl, useTranslations } from '../utils/i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const currentYear = new Date().getFullYear();
---

<link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-section">
        <h3>Espai.ai</h3>
        <p>{t('site.description')}</p>
        <p class="crafted">
          <span class="crafted-text">{t('footer.crafted').split('♡')[0]}</span>
          <span class="crafted-heart">♡</span>
          <span class="crafted-text">{t('footer.crafted').split('♡')[1]}</span>
        </p>
      </div>
      
      <div class="footer-section">
        <h4>{t('nav.home')}</h4>
        <ul>
          <li><a href={lang === 'en' ? '/' : `/${lang}/`}>{t('nav.home')}</a></li>
          <li><a href={lang === 'en' ? '/about' : `/${lang}/about`}>{t('nav.about')}</a></li>
          <li><a href={lang === 'en' ? '/pricing' : `/${lang}/pricing`}>{t('nav.pricing')}</a></li>
        </ul>
      </div>
      
      <div class="footer-section">
        <h4>{t('nav.resources')}</h4>
        <ul>
          <li><a href={lang === 'en' ? '/faq' : `/${lang}/faq`}>{t('nav.faq')}</a></li>
          <li><a href={lang === 'en' ? '/contact' : `/${lang}/contact`}>{t('nav.contact')}</a></li>
          <li>
            <a href={lang === 'en' ? '/privacy' : `/${lang}/privacy`}>{t('nav.privacy')}</a>
          </li>
        </ul>
      </div>
      
      <div class="footer-section">
        <h4>Connect</h4>
        <div class="social-links">
          <a href="https://www.linkedin.com/company/espai-ai/" aria-label="LinkedIn">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p>&copy; {currentYear} Espai.ai. {t('footer.rights')}</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--space-darker);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding: 60px 0 20px;
    margin-top: 80px;
  }
  
  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 40px;
    margin-bottom: 40px;
  }
  
  .footer-section h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: var(--space-white);
  }
  
  .footer-section h4 {
    font-size: 1.1rem;
    margin-bottom: 1rem;
    color: var(--space-white);
  }
  
  .footer-section p {
    color: var(--space-light-gray);
    line-height: 1.6;
  }
  
  .footer-section ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .footer-section ul li {
    margin-bottom: 0.5rem;
  }
  
  .footer-section ul li a {
    color: var(--space-light-gray);
    text-decoration: none;
    transition: color 0.3s ease;
  }
  
  .footer-section ul li a:hover {
    color: var(--accent);
  }
  
  .social-links {
    display: flex;
    gap: 1rem;
  }
  
  .social-links a {
    color: var(--space-light-gray);
    transition: all 0.3s ease;
  }
  
  .social-links a:hover {
    color: var(--accent);
    transform: translateY(-2px);
  }
  
  .footer-bottom {
    text-align: center;
    padding-top: 20px;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .footer-bottom p {
    color: var(--space-gray);
    margin: 0;
  }
  
  .crafted {
    font-size: 0.95rem;
    color: var(--space-gray);
    margin-top: 0.5rem;
    font-style: italic;
    font-family: 'Pacifico', 'Comic Sans MS', cursive, sans-serif;
    letter-spacing: 0.01em;
    display: flex;
    align-items: center;
    gap: 0.2em;
  }
  .crafted-heart {
    color: #e25555;
    font-size: 1.1em;
    margin: 0 0.1em;
    font-family: inherit;
    vertical-align: middle;
    font-style: normal;
  }
  .crafted-text {
    font-family: 'Pacifico', 'Comic Sans MS', cursive, sans-serif;
    font-size: 0.95em;
  }
  
  @media (max-width: 768px) {
    .footer {
      padding: 40px 0 20px;
    }
    
    .footer-content {
      gap: 30px;
      margin-bottom: 30px;
    }
  }
</style>
