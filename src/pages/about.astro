---
import Layout from '../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../utils/i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title={`${t('nav.about')} | ${t('site.title')}`} description={t('site.description')}>
  <section class="section">
    <div class="container">
      <div class="section-header text-center mb-4">
        <h1>About Espai.ai</h1>
        <p class="text-large">Revolutionizing business processes with artificial intelligence</p>
      </div>
      
      <div class="grid grid-2">
        <div class="card fade-in">
          <h3>Our Mission</h3>
          <p>We believe every business has untapped potential. Our mission is to help companies discover inefficiencies, automate repetitive tasks, and optimize their operations using cutting-edge AI technology.</p>
        </div>
        
        <div class="card fade-in">
          <h3>Our Vision</h3>
          <p>To become the leading AI-powered business optimization platform, empowering companies worldwide to achieve unprecedented levels of efficiency and growth.</p>
        </div>
      </div>
      
      <div class="section mt-4">
        <h2 class="text-center mb-4">What We Do</h2>
        <div class="grid grid-3">
          <div class="card fade-in">
            <h4>Process Analysis</h4>
            <p>Deep dive into your business workflows to identify bottlenecks and inefficiencies.</p>
          </div>
          
          <div class="card fade-in">
            <h4>AI Recommendations</h4>
            <p>Get intelligent suggestions for process improvements and automation opportunities.</p>
          </div>
          
          <div class="card fade-in">
            <h4>Implementation Support</h4>
            <p>Guidance and support throughout the optimization and automation implementation process.</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
