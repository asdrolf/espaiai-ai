---
import Layout from '../../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../../utils/i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title={`${t('nav.about')} | ${t('site.title')}`} description={t('meta.about.description')}>
  <section class="section">
    <div class="container">
      <div class="section-header text-center mb-4">
        <h1>{t('about.hero.title')}</h1>
        <p class="text-large">{t('about.hero.subtitle')}</p>
      </div>
      
      <div class="grid grid-2">
        <div class="card fade-in">
          <h3>{t('about.results.title')}</h3>
          <p>{t('about.results.description')}</p>
        </div>
        
        <div class="card fade-in">
          <h3>{t('about.approach.title')}</h3>
          <p>{t('about.approach.description')}</p>
        </div>
      </div>
      
      <div class="section mt-4">
        <h2 class="text-center mb-4">{t('about.whatwedo.title')}</h2>
        <div class="grid grid-3">
          <div class="card fade-in">
            <h4>{t('about.whatwedo.record.title')}</h4>
            <p>{t('about.whatwedo.record.description')}</p>
          </div>
          
          <div class="card fade-in">
            <h4>{t('about.whatwedo.find.title')}</h4>
            <p>{t('about.whatwedo.find.description')}</p>
          </div>
          
          <div class="card fade-in">
            <h4>{t('about.whatwedo.build.title')}</h4>
            <p>{t('about.whatwedo.build.description')}</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout> 