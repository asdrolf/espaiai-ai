---
import Layout from '../layouts/Layout.astro';
import VideoSchema from '../components/schemas/VideoSchema.astro';
import ServiceSchema from '../components/schemas/ServiceSchema.astro';
import AITechnologySchema from '../components/schemas/AITechnologySchema.astro';
import PricingSchema from '../components/schemas/PricingSchema.astro';
import { getLangFromUrl, useTranslations, getNavLink } from '../utils/i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title={t('site.title')} description="Stop wasting time on repetitive tasks. Espai.ai records your processes, finds inefficiencies with AI, and creates automations that save 20+ hours per week. Pay only when you start saving.">
  <!-- Hero Section -->
  <section class="section section-hero">
    <div class="container">
      <div class="hero-content fade-in">
        <h1 class="hero-title">{t('hero.title')}</h1>
        <p class="hero-subtitle text-large">{t('hero.subtitle')}</p>
        <div class="hero-actions">
          <a href={getNavLink('contact', lang)} class="btn">{t('hero.cta')}</a>
          <a href={getNavLink('faq', lang)} class="btn btn-secondary">{t('hero.cta.secondary')}</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Video Presentation Section -->
  <section class="section section-video-presentation">
    <div class="container text-center">
      <h2 style="margin-bottom:1rem;">See How We Save Companies 20+ Hours Per Week</h2>
      <p style="margin-bottom:2rem;">Watch our 2-minute demo to see how Espai.ai identifies inefficiencies and creates automations that actually work.</p>
      <div class="video-placeholder" style="display:flex; justify-content:center;">
        <!-- Lazy-loaded YouTube video -->
        <div id="youtube-placeholder" class="youtube-placeholder" style="width: 560px; height: 315px; background: linear-gradient(135deg, #06b6d4, #3b82f6); border-radius: 16px; display: flex; align-items: center; justify-content: center; cursor: pointer; position: relative; overflow: hidden;">
          <div style="text-align: center; color: white; z-index: 2;">
            <svg width="80" height="80" viewBox="0 0 24 24" fill="currentColor" style="margin-bottom: 1rem;">
              <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
            </svg>
            <h3 style="margin: 0; font-size: 1.5rem;">Watch 2-Minute Demo</h3>
            <p style="margin: 0.5rem 0 0 0; opacity: 0.9;">See real results in action</p>
          </div>
          <div class="play-button-overlay" style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); width: 80px; height: 80px; background: rgba(255, 255, 255, 0.2); border-radius: 50%; display: flex; align-items: center; justify-content: center; transition: all 0.3s ease;">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="white">
              <path d="M8 5v14l11-7z"/>
            </svg>
          </div>
        </div>
      </div>
    </div>
  </section>

  <style>
    .youtube-placeholder:hover .play-button-overlay {
      background: rgba(255, 255, 255, 0.3);
      transform: translate(-50%, -50%) scale(1.1);
    }
    
    @media (max-width: 768px) {
      .youtube-placeholder {
        width: 100% !important;
        max-width: 560px;
        height: auto !important;
        aspect-ratio: 16/9;
      }
    }
  </style>

  <script>
    // Use performance utilities for optimized YouTube loading
    import { performanceUtils } from '../utils/performance';
    
    document.addEventListener('DOMContentLoaded', function() {
      // Optimize YouTube video loading with improved UX
      performanceUtils.optimizeYouTubeLoading('youtube-placeholder', '0hypUiBaT3Q');
    });
  </script>

  <!-- Features Section -->
  <section class="section" id="features">
    <div class="container">
      <div class="section-header text-center mb-4">
        <h2>How We Save You 20+ Hours Per Week</h2>
        <p class="text-large">Our AI does the heavy lifting - you get the results</p>
      </div>
      
      <div class="grid grid-3">
        <div class="card fade-in">
          <div class="feature-icon">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
          </div>
          <h3>Records Everything Automatically</h3>
          <p>Our software silently records all system events and user actions. No configuration needed - just install and it starts working immediately.</p>
        </div>
        
        <div class="card fade-in">
          <div class="feature-icon">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M9 12l2 2 4-4"/>
              <path d="M21 12c-1 0-3-1-3-3s2-3 3-3 3 1 3 3-2 3-3 3"/>
              <path d="M3 12c1 0 3-1 3-3s-2-3-3-3-3 1-3 3 2 3 3 3"/>
              <path d="M12 3c0 1-1 3-3 3s-3-2-3-3 1-3 3-3 3 2 3 3"/>
              <path d="M12 21c0-1 1-3 3-3s3 2 3 3-1 3-3 3-3-2-3-3"/>
            </svg>
          </div>
          <h3>AI Finds Hidden Inefficiencies</h3>
          <p>Our AI analyzes your processes and identifies exactly where time is being wasted. Get specific recommendations for automation opportunities.</p>
        </div>
        
        <div class="card fade-in">
          <div class="feature-icon">
            <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M3 3v18h18"/>
              <path d="M18.7 8l-5.1 5.2-2.8-2.7L7 14.3"/>
            </svg>
          </div>
          <h3>Creates Working Automations</h3>
          <p>We don't just suggest improvements - we build the automations for you. Most companies see their first time savings during the second or fourth month, depending on the sector and complexity of processes.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works Section -->
  <section class="section">
    <div class="container">
      <div class="section-header text-center mb-4">
        <h2>3 Simple Steps to Save 20+ Hours Per Week</h2>
        <p class="text-large">No technical knowledge required - we handle everything</p>
      </div>
      
      <div class="grid grid-3">
        <div class="process-step fade-in">
          <div class="step-number">1</div>
          <h3>Install & Record (Day 1)</h3>
          <p>We install our software on your systems. It immediately starts recording all processes and user actions. No setup or training required.</p>
        </div>
        
        <div class="process-step fade-in">
          <div class="step-number">2</div>
          <h3>AI Analysis (Week 1-2)</h3>
          <p>Our AI analyzes your data and identifies specific inefficiencies. You get a detailed report showing exactly where time is being wasted.</p>
        </div>
        
        <div class="process-step fade-in">
          <div class="step-number">3</div>
          <h3>Automation & Savings (Week 2-4)</h3>
          <p>We build and deploy automations for your biggest time-wasters. You start seeing real time savings immediately. Pay only after you start saving.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Value Proposition Section -->
  <section class="section">
    <div class="container">
      <div class="section-header text-center mb-4">
        <h2>Why Companies Choose Espai.ai</h2>
        <p class="text-large">Real results, not empty promises</p>
      </div>
      
      <div class="grid grid-2">
        <div class="card fade-in">
          <h3>ðŸš€ Zero Risk Implementation</h3>
          <p>You don't pay anything until automations start saving you time. Most companies see ROI during the second or fourth month, depending on the sector and complexity of processes. No upfront costs, no long-term contracts.</p>
        </div>
        
        <div class="card fade-in">
          <h3>ðŸ’° Proven Time Savings</h3>
          <p>Our clients save an average of 20+ hours per week. That's 1,040+ hours per year - equivalent to hiring an additional full-time employee.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section section-cta" id="contact">
    <div class="container">
      <div class="cta-content text-center">
        <h2>Ready to Save 20+ Hours Per Week?</h2>
        <p class="text-large">Join companies that are eliminating manual work with AI automation</p>
        <div class="cta-actions">
          <a href={getNavLink('contact', lang)} class="btn">Get Free Process Analysis</a>
          <a href={getNavLink('contact', lang)} class="btn btn-secondary">See Pricing</a>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .hero-content {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .hero-title {
    font-size: 4rem;
    margin-bottom: 1.5rem;
    text-align: center;
  }
  
  .hero-subtitle {
    text-align: center;
    margin-bottom: 2rem;
    opacity: 0.9;
  }
  
  .hero-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }
  
  .section-header {
    max-width: 600px;
    margin: 0 auto;
  }
  
  .feature-icon {
    width: 64px;
    height: 64px;
    background: var(--accent-gradient);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.5rem;
    color: var(--space-white);
  }
  
  .process-step {
    text-align: center;
    padding: 2rem;
  }
  
  .step-number {
    width: 60px;
    height: 60px;
    background: var(--accent-gradient);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--space-white);
    margin: 0 auto 1.5rem;
  }
  
  .section-cta {
    background: radial-gradient(circle at center, rgba(6, 182, 212, 0.1) 0%, transparent 70%);
  }
  
  .cta-content {
    max-width: 600px;
    margin: 0 auto;
  }
  
  .cta-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-top: 2rem;
  }
  
  @media (max-width: 768px) {
    .hero-title {
      font-size: 2.5rem;
    }
    
    .hero-actions {
      flex-direction: column;
      align-items: center;
    }
    
    .hero-actions .btn {
      width: 100%;
      max-width: 300px;
    }
    
    .cta-actions {
      flex-direction: column;
      align-items: center;
    }
    
    .cta-actions .btn {
      width: 100%;
      max-width: 300px;
    }
  }
  
  /* Animation delays for staggered fade-in */
  .fade-in:nth-child(1) { animation-delay: 0.1s; }
  .fade-in:nth-child(2) { animation-delay: 0.2s; }
  .fade-in:nth-child(3) { animation-delay: 0.3s; }
  .fade-in:nth-child(4) { animation-delay: 0.4s; }
</style>

<!-- Structured Data Schemas -->
<VideoSchema 
  name="Espai.ai - AI Business Process Automation Platform"
  description="Watch our short video to see how Espai.ai can transform your business with AI-powered automation, process recording, and optimization."
  embedUrl="https://www.youtube-nocookie.com/embed/0hypUiBaT3Q"
  duration="PT2M30S"
/>

<ServiceSchema 
  name="AI Business Process Automation"
  description="Comprehensive business process optimization using artificial intelligence. We record all system events, analyze with AI, and create custom automations."
  serviceType="Business Process Automation"
  offers={{
    price: "70-100",
    priceCurrency: "EUR",
    description: "Per device per month pricing with automation fees"
  }}
/>

<!-- Advanced AI Technology Schema -->
<AITechnologySchema 
  name="Espai.ai AI Process Automation Platform"
  description="Advanced AI technology for business process automation, recording, analysis and optimization using machine learning and process mining"
  lang={lang}
/>

<!-- Detailed Pricing Schema -->
<PricingSchema 
  currency="EUR"
  lang={lang}
/>
